<Window x:Class="Palisades.View.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:Palisades.ViewModel"
    mc:Ignorable="d"
    Title="{Binding Settings_Title}"
    Height="400"
    Width="600"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    ResizeMode="NoResize"
    Background="#FFF0F0F0"
    MouseDown="DragMove">
    <Window.DataContext>
        <viewModel:SettingsViewModel />
    </Window.DataContext>
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="Background" Value="#FFDDDDDD" />
            <Setter Property="BorderBrush" Value="#FF999999" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="MinHeight" Value="30" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="15" MinHeight="100">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" Margin="0,0,0,15" Padding="15"
            Background="White"
            BorderBrush="#FFCCCCCC"
            BorderThickness="1"
            CornerRadius="5">
            <StackPanel>
                <TextBlock Text="{Binding Settings_Title}"
                    FontSize="24"
                    FontWeight="SemiBold"
                    Foreground="#FF1976D2" />
            </StackPanel>
        </Border>

        <!-- Settings Section -->
        <Border Grid.Row="1" Margin="0,0,0,15" Padding="15"
            Background="White"
            BorderBrush="#FFCCCCCC"
            BorderThickness="1"
            CornerRadius="5">
            <StackPanel>
                <TextBlock Text="{Binding Settings_Language}"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Margin="0,0,0,5" />
                <ComboBox Margin="0,5,0,15"
                    ItemsSource="{Binding AvailableLanguages}"
                    SelectedValue="{Binding SelectedLanguage, Mode=TwoWay}"
                    DisplayMemberPath="Name"
                    SelectedValuePath="Code" />
            </StackPanel>
        </Border>

        <!-- Close Button -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button MinWidth="80" Content="{Binding Global_Close, Source={StaticResource GlobalViewModel}}" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>